{{#if posts.length}}
<section>
  <h2>Your Workouts</h2>
  <a href="/add-workout">Log New Workout</a>

  {{#each posts as |post|}}
  <div class="card">
    <div class="card-body">
      <p>Workout: {{post.friendlyTimestamp}}
        <ul>
        
          {{#each entries as |entry|}}
          <li>
            {{entry.exercise.exercise_name}}: 
            {{entry.string}}
          </li>
          {{/each}}
          
        </ul>
      </p> 
    </div>
  </div>
  {{/each}}
  
</section>
{{/if}}



